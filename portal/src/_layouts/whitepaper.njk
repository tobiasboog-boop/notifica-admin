---
layout: base-notion.njk
---

{% block content %}
<article class="whitepaper-content">
  <div class="container" style="max-width: 800px; padding: 100px 40px 40px;">
    <!-- Terug naar overzicht -->
    <a href="{{ '/inspiratie/whitepapers/' | url }}" class="back-link" style="display: inline-flex; align-items: center; gap: 8px; color: var(--text-secondary); text-decoration: none; font-size: 14px; margin-bottom: 32px;">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Terug naar alle whitepapers
    </a>

    <!-- Type badge -->
    {% if type %}
    <span style="display: inline-block; background: #f0f4ff; color: var(--primary-color); padding: 4px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; text-transform: uppercase; margin-bottom: 16px;">
      {{ type }}
    </span>
    {% endif %}

    <!-- H1 uit frontmatter title voor SEO -->
    <h1 style="font-size: 36px; font-weight: 700; color: var(--primary-color); line-height: 1.3; margin-bottom: 24px;">{{ title }}</h1>

    {{ content | safe }}
  </div>

  <!-- CTA Sectie -->
  <div style="background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%); padding: 60px 40px; margin-top: 40px;">
    <div class="container" style="max-width: 800px;">
      <div style="text-align: center;">
        <h2 style="font-size: 28px; font-weight: 700; color: var(--primary-color); margin-bottom: 16px;">
          Meer weten over datagedreven werken?
        </h2>
        <p style="font-size: 16px; color: var(--text-secondary); margin-bottom: 24px; max-width: 600px; margin-left: auto; margin-right: auto;">
          Ontdek hoe Notifica's Power BI dashboards jouw installatiebedrijf kunnen transformeren.
        </p>
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href="#contact" class="btn" data-pipedrive-form="demo" style="background: #16136F; color: white; padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 15px;">
            Plan een demo
          </a>
          <a href="{{ '/inspiratie/whitepapers/' | url }}" style="background: white; color: #16136F; padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 15px; border: 2px solid #16136F;">
            Meer whitepapers
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Terug naar overzicht (onderaan) -->
  <div style="text-align: center; padding: 40px;">
    <a href="{{ '/inspiratie/whitepapers/' | url }}" style="display: inline-flex; align-items: center; gap: 8px; color: var(--primary-color); text-decoration: none; font-weight: 500; font-size: 15px;">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Bekijk alle whitepapers
    </a>
  </div>
</article>
{% endblock %}
