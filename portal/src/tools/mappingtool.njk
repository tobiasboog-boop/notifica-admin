<body>
    <header class="header">
        <a href="{{ '/admin/' | url }}">‚Üê Terug naar Admin</a>
        <h1>Mapping Tool</h1>
    </header>

    <div class="placeholder" id="placeholder">
        <span class="icon">üó∫Ô∏è</span>
        <h2>Mapping Tool</h2>
        <p>Map nieuwe klantdata tegen historische mappings met zelflerende AI. Ondersteunt Taken, Winst & Verlies en Balans mappings.</p>

        <div class="features">
            <div class="feature"><strong>Taken</strong> mapping</div>
            <div class="feature"><strong>W&V</strong> mapping</div>
            <div class="feature"><strong>Balans</strong> mapping</div>
            <div class="feature"><strong>AI</strong> learning</div>
        </div>

        <div id="status-message">
            <p style="color: #f59e0b; font-weight: 600; margin-bottom: 16px;">‚ö†Ô∏è Controleert of tool beschikbaar is...</p>
        </div>
        <a href="http://localhost:8504" target="_blank" class="btn" id="open-btn" style="display:none;">Open Mapping Tool</a>
        <code>python -m streamlit run streamlit/mappingtool/app.py --server.port 8504</code>
        <span class="note">‚ö†Ô∏è Let op: Deze tool werkt alleen op Tobias' computer vanwege toegang tot OneDrive bestanden</span>
    </div>

    <iframe id="dashboard" src="" allow="clipboard-write" style="display:none;"></iframe>

    <script>
        const iframe = document.getElementById('dashboard');
        const placeholder = document.getElementById('placeholder');
        const statusMessage = document.getElementById('status-message');
        const openBtn = document.getElementById('open-btn');
        const LOCALHOST_URL = 'http://localhost:8504';
        const LAUNCHER_URL = 'http://localhost:8500';

        // Check if we're running locally (not on GitHub Pages or other remote hosts)
        const isLocalEnvironment = ['localhost', '127.0.0.1', ''].includes(window.location.hostname);

        function showRemoteNotice() {
            statusMessage.innerHTML = `
                <p style="color: #6b7280; font-weight: 600; margin-bottom: 8px;">üñ•Ô∏è Alleen lokaal beschikbaar</p>
                <p style="color: #6b7280; font-size: 0.85rem;">Deze tool vereist toegang tot OneDrive bestanden en draait daarom alleen lokaal op Tobias' computer.</p>
                <p style="color: #6b7280; font-size: 0.85rem; margin-top: 8px;">Start de tool lokaal met onderstaand commando.</p>
            `;
        }

        // Try to start the app via launcher
        async function tryStartApp() {
            try {
                const response = await fetch(LAUNCHER_URL + '/start/mappingtool', {
                    method: 'GET',
                    mode: 'no-cors'
                });
                // Wait a bit for app to start
                setTimeout(checkLocalhost, 2000);
            } catch (e) {
                // Launcher not running, fall back to manual check
                checkLocalhost();
            }
        }

        // Check if localhost:8504 is reachable using iframe trick
        function checkLocalhost() {
            // Create a test iframe to check if localhost is accessible
            const testIframe = document.createElement('iframe');
            testIframe.style.display = 'none';
            testIframe.src = LOCALHOST_URL + '/';

            let hasLoaded = false;
            let timeoutId = null;

            // Success handler
            testIframe.onload = function() {
                hasLoaded = true;
                clearTimeout(timeoutId);
                document.body.removeChild(testIframe);

                // Localhost is running!
                statusMessage.innerHTML = '<p style="color: #10b981; font-weight: 600;">‚úÖ Mapping Tool is beschikbaar!</p>';
                openBtn.style.display = 'inline-block';

                // Load main iframe
                setTimeout(() => {
                    iframe.src = LOCALHOST_URL + '/?embed=true';
                    placeholder.style.display = 'none';
                    iframe.style.display = 'block';
                }, 1000);
            };

            // Error handler
            testIframe.onerror = function() {
                hasLoaded = true;
                clearTimeout(timeoutId);
                document.body.removeChild(testIframe);
                showNotAvailable();
            };

            // Timeout handler - if nothing happens in 3 seconds, assume it's not available
            timeoutId = setTimeout(function() {
                if (!hasLoaded) {
                    document.body.removeChild(testIframe);
                    showNotAvailable();
                }
            }, 3000);

            document.body.appendChild(testIframe);
        }

        function showNotAvailable() {
            statusMessage.innerHTML = `
                <p style="color: #ef4444; font-weight: 600; margin-bottom: 8px;">‚ùå Mapping Tool is niet beschikbaar</p>
                <p style="color: #6b7280; font-size: 0.85rem;">Deze tool draait lokaal op poort 8504.</p>
                <p style="color: #6b7280; font-size: 0.85rem; margin-top: 8px;">Start de tool met onderstaand commando.</p>
            `;
        }

        // Only try localhost checks when running locally
        if (isLocalEnvironment) {
            tryStartApp();
            // Recheck every 10 seconds
            setInterval(checkLocalhost, 10000);
        } else {
            // On GitHub Pages or other remote host - don't attempt localhost connections
            showRemoteNotice();
        }
    </script>
