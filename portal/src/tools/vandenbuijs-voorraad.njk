<body>
    <div class="container">
        <div class="logo">üìä</div>
        <h1>Van den Buijs</h1>
        <p class="subtitle">Voorraad Dashboard</p>

        <div id="loading">
            <div class="spinner"></div>
            <p class="status" id="status">Dashboard wordt opgestart...</p>
            <p class="substatus" id="substatus">Even geduld, de app wordt wakker gemaakt</p>
        </div>

        <a href="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/"
           id="openBtn"
           class="btn"
           target="_blank">
            Open Dashboard
        </a>

        <div class="password-hint">
            Wachtwoord: <code>Dashboard6A8130</code>
        </div>

        <a href="{{ '/' | url }}" class="back-link">‚Üê Terug naar Admin Portal</a>
    </div>

    <script>
        const STREAMLIT_URL = 'https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/';
        const status = document.getElementById('status');
        const substatus = document.getElementById('substatus');
        const loading = document.getElementById('loading');
        const openBtn = document.getElementById('openBtn');

        let attempts = 0;
        const maxAttempts = 5;

        async function wakeUpApp() {
            try {
                // Ping the app to wake it up (no-cors because Streamlit doesn't allow CORS)
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 8000);

                await fetch(STREAMLIT_URL, {
                    mode: 'no-cors',
                    signal: controller.signal
                });
                clearTimeout(timeoutId);

                // Success - app responded
                status.textContent = 'Dashboard is klaar!';
                substatus.textContent = 'Klik op de knop om te openen';
                loading.querySelector('.spinner').style.display = 'none';
                openBtn.classList.add('ready');
                openBtn.textContent = 'Open Dashboard ‚Üí';

            } catch (e) {
                attempts++;
                if (attempts < maxAttempts) {
                    status.textContent = `App wordt opgestart... (poging ${attempts}/${maxAttempts})`;
                    substatus.textContent = 'Streamlit Cloud apps hebben even nodig om wakker te worden';
                    setTimeout(wakeUpApp, 3000);
                } else {
                    status.textContent = 'App is mogelijk nog aan het opstarten';
                    substatus.textContent = 'Klik op de knop - de app opent in een nieuw tabblad';
                    loading.querySelector('.spinner').style.display = 'none';
                }
            }
        }

        // Start wake-up process
        wakeUpApp();

        // Also open a hidden image to trigger connection
        const img = new Image();
        img.src = STREAMLIT_URL + 'favicon.ico?' + Date.now();
    </script>
</body>
