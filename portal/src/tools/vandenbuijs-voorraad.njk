<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Van den Buijs - Voorraad Dashboard</title>
    <link rel="preconnect" href="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .header {
            background: #16136F;
            color: white;
            padding: 12px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .header h1 {
            font-size: 1.1rem;
            font-weight: 600;
        }
        .header a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-size: 0.85rem;
        }
        .header a:hover { color: white; }

        .loading-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }
        .spinner {
            width: 48px;
            height: 48px;
            border: 4px solid #e5e7eb;
            border-top-color: #16136F;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .loading-text {
            margin-top: 20px;
            color: #4b5563;
            font-size: 1rem;
        }
        .loading-subtext {
            margin-top: 8px;
            color: #9ca3af;
            font-size: 0.85rem;
        }
        .status {
            margin-top: 16px;
            padding: 8px 16px;
            background: #fef3c7;
            color: #92400e;
            border-radius: 6px;
            font-size: 0.8rem;
            display: none;
        }
        .status.show { display: block; }
        .status.ready {
            background: #d1fae5;
            color: #065f46;
        }

        .app-frame {
            flex: 1;
            width: 100%;
            border: none;
            display: none;
        }
        .app-frame.loaded { display: block; }

        .direct-link {
            margin-top: 24px;
            padding: 12px 24px;
            background: #16136F;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 0.9rem;
            display: none;
        }
        .direct-link:hover { background: #1e1b8a; }
        .direct-link.show { display: inline-block; }
    </style>
</head>
<body>
    <header class="header">
        <h1>Van den Buijs - Voorraad Dashboard</h1>
        <a href="{{ '/' | url }}">← Terug naar Admin Portal</a>
    </header>

    <div class="loading-container" id="loading">
        <div class="spinner"></div>
        <div class="loading-text">Dashboard wordt geladen...</div>
        <div class="loading-subtext">De app wordt opgestart, dit kan even duren.</div>
        <div class="status" id="status"></div>
        <a href="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/"
           target="_blank"
           class="direct-link"
           id="directLink">
            Open in nieuw tabblad →
        </a>
    </div>

    <iframe
        id="appFrame"
        class="app-frame"
        src="about:blank"
        allow="clipboard-write"
    ></iframe>

    <!-- Preload: wake up the app immediately -->
    <link rel="preload" href="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/" as="document">

    <script>
        const STREAMLIT_URL = 'https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/';
        const frame = document.getElementById('appFrame');
        const loading = document.getElementById('loading');
        const status = document.getElementById('status');
        const directLink = document.getElementById('directLink');

        let attempts = 0;
        let appReady = false;

        function updateStatus(message, isReady = false) {
            status.textContent = message;
            status.classList.add('show');
            if (isReady) {
                status.classList.add('ready');
            }
        }

        // Try to wake up the app with a fetch first
        async function wakeUpApp() {
            updateStatus('App wordt wakker gemaakt...');

            try {
                // Use no-cors mode since Streamlit doesn't allow CORS
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 10000);

                await fetch(STREAMLIT_URL, {
                    mode: 'no-cors',
                    signal: controller.signal
                });
                clearTimeout(timeoutId);

                // If we get here, the server responded
                updateStatus('App reageert, pagina wordt geladen...');
                loadFrame();
            } catch (e) {
                attempts++;
                if (attempts < 3) {
                    updateStatus(`Poging ${attempts + 1}... App start op.`);
                    setTimeout(wakeUpApp, 3000);
                } else {
                    // After 3 attempts, just load the frame anyway
                    updateStatus('App laden duurt langer dan verwacht...');
                    loadFrame();
                    // Show direct link as backup
                    setTimeout(() => {
                        directLink.classList.add('show');
                    }, 5000);
                }
            }
        }

        function loadFrame() {
            frame.src = STREAMLIT_URL;
        }

        // When iframe loads successfully
        frame.onload = function() {
            // Small delay to ensure Streamlit has rendered
            setTimeout(() => {
                loading.style.display = 'none';
                frame.classList.add('loaded');
                appReady = true;
            }, 1000);
        };

        // Fallback: show direct link after 30 seconds if still loading
        setTimeout(() => {
            if (!appReady) {
                directLink.classList.add('show');
                updateStatus('Laden duurt lang. Gebruik de link hieronder als alternatief.');
            }
        }, 30000);

        // Start the wake-up process
        wakeUpApp();
    </script>
</body>
</html>
