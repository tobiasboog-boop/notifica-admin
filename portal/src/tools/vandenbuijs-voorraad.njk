    <header class="header">
        <a href="{{ '/admin/' | url }}">‚Üê Terug naar Admin</a>
        <h1>Voorraad Dashboard - Van den Buijs</h1>
    </header>

    <div class="placeholder" id="placeholder">
        <span class="icon">üì¶</span>
        <h2>Voorraad Dashboard</h2>
        <p>Voorraad dashboard met min-max bewaking voor Van den Buijs.</p>
        <a href="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/" target="_blank" class="btn">Open Dashboard</a>
        <button class="btn-secondary" id="show-password-btn">Toon wachtwoord</button>
        <span class="password-hint" id="password-hint" style="display:none;">Wachtwoord: <strong>Dashboard6A8130</strong></span>
        <span class="note" id="loading-note">Dashboard wordt geladen... Dit kan even duren als de app slaapt.</span>
    </div>

    <iframe id="dashboard" src="https://notificasite-5m5gc8hfgsjpxtmh6ltguf.streamlit.app/?embed=true" allow="clipboard-write" style="display:none;"></iframe>

    <script>
        const iframe = document.getElementById('dashboard');
        const placeholder = document.getElementById('placeholder');
        const loadingNote = document.getElementById('loading-note');
        const showPasswordBtn = document.getElementById('show-password-btn');
        const passwordHint = document.getElementById('password-hint');

        // Toggle password visibility
        showPasswordBtn.addEventListener('click', function() {
            if (passwordHint.style.display === 'none') {
                passwordHint.style.display = 'block';
                showPasswordBtn.textContent = 'Verberg wachtwoord';
            } else {
                passwordHint.style.display = 'none';
                showPasswordBtn.textContent = 'Toon wachtwoord';
            }
        });

        iframe.onload = function() {
            try {
                placeholder.style.display = 'none';
                iframe.style.display = 'block';
            } catch(e) {
                placeholder.style.display = 'flex';
                iframe.style.display = 'none';
            }
        };

        iframe.onerror = function() {
            placeholder.style.display = 'flex';
            iframe.style.display = 'none';
            loadingNote.textContent = 'Kon dashboard niet laden. Klik op "Open Dashboard" om in nieuw tabblad te openen.';
        };

        // Update loading message after timeout
        setTimeout(function() {
            if (iframe.style.display !== 'block') {
                loadingNote.textContent = 'Dashboard slaapt waarschijnlijk. Klik op "Open Dashboard" - eerste keer laden duurt ~30 sec.';
            }
        }, 8000);
    </script>
</body>
